---
const services = [
  {
    title: 'Web Development',
    description: 'Custom websites built with modern technologies for optimal performance and user experience.',
    icon: `<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4"></path></svg>`
  },
  {
    title: 'UI/UX Design',
    description: 'Beautiful, intuitive interfaces that engage users and drive conversions.',
    icon: `<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path></svg>`
  },
  {
    title: 'Digital Marketing',
    description: 'Strategic marketing solutions to grow your online presence and reach your target audience.',
    icon: `<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 3.055A9.001 9.001 0 1020.945 13H11V3.055z"></path><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20.488 9H15V3.512A9.025 9.025 0 0120.488 9z"></path></svg>`
  }
];
---

<section id="services" class="py-20 bg-gray-50 dark:bg-gray-900">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center animate-on-scroll">
      <h2 class="text-3xl font-bold font-poppins text-dark dark:text-white">Our Services</h2>
      <p class="mt-4 text-gray-600 dark:text-gray-300">Comprehensive solutions for your digital needs</p>
    </div>

    <div class="mt-16 grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {services.map((service, index) => (
        <div class="bg-white dark:bg-gray-800 rounded-lg p-8 shadow-lg hover:shadow-xl transition-all duration-300 group animate-on-scroll" style={`animation-delay: ${index * 150}ms`}>
          <div class="text-primary group-hover:text-accent transition-colors duration-300" set:html={service.icon} />
          <h3 class="mt-6 text-xl font-semibold text-dark dark:text-white">{service.title}</h3>
          <p class="mt-4 text-gray-600 dark:text-gray-300">{service.description}</p>
        </div>
      ))}
    </div>
  </div>
</section>