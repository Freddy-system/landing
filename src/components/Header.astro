<header class="fixed w-full bg-white/90 dark:bg-dark/90 backdrop-blur-sm z-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center py-4">
      <div class="flex items-center">
        <a href="/" class="text-2xl font-bold font-poppins text-primary">
          YourBrand
        </a>
      </div>
      
      <nav class="hidden md:flex space-x-8">
        <a href="#home" class="text-dark dark:text-white hover:text-primary dark:hover:text-primary transition">Home</a>
        <a href="#about" class="text-dark dark:text-white hover:text-primary dark:hover:text-primary transition">About Us</a>
        <a href="#services" class="text-dark dark:text-white hover:text-primary dark:hover:text-primary transition">Services</a>
        <a href="#features" class="text-dark dark:text-white hover:text-primary dark:hover:text-primary transition">Features</a>
        <a href="#testimonials" class="text-dark dark:text-white hover:text-primary dark:hover:text-primary transition">Testimonials</a>
        <a href="#contact" class="text-dark dark:text-white hover:text-primary dark:hover:text-primary transition">Contact</a>
        <button id="theme-toggle" class="p-2 rounded-lg hover:bg-gray-100 dark:hover:bg-gray-800 transition">
          <svg class="w-5 h-5 hidden dark:block" fill="currentColor" viewBox="0 0 20 20">
            <path d="M10 2a1 1 0 011 1v1a1 1 0 11-2 0V3a1 1 0 011-1zm4 8a4 4 0 11-8 0 4 4 0 018 0zm-.464 4.95l.707.707a1 1 0 001.414-1.414l-.707-.707a1 1 0 00-1.414 1.414zm2.12-10.607a1 1 0 010 1.414l-.706.707a1 1 0 11-1.414-1.414l.707-.707a1 1 0 011.414 0zM17 11a1 1 0 100-2h-1a1 1 0 100 2h1zm-7 4a1 1 0 011 1v1a1 1 0 11-2 0v-1a1 1 0 011-1zM5.05 6.464A1 1 0 106.465 5.05l-.708-.707a1 1 0 00-1.414 1.414l.707.707zm1.414 8.486l-.707.707a1 1 0 01-1.414-1.414l.707-.707a1 1 0 011.414 1.414zM4 11a1 1 0 100-2H3a1 1 0 000 2h1z"></path>
          </svg>
          <svg class="w-5 h-5 dark:hidden" fill="currentColor" viewBox="0 0 20 20">
            <path d="M17.293 13.293A8 8 0 016.707 2.707a8.001 8.001 0 1010.586 10.586z"></path>
          </svg>
        </button>
      </nav>

      <button class="md:hidden" id="mobile-menu-button">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
      </button>
    </div>
  </div>

  <!-- Mobile menu -->
  <div class="md:hidden hidden" id="mobile-menu">
    <div class="px-2 pt-2 pb-3 space-y-1">
      <a href="#home" class="block px-3 py-2 text-base font-medium text-dark dark:text-white hover:text-primary dark:hover:text-primary">Home</a>
      <a href="#about" class="block px-3 py-2 text-base font-medium text-dark dark:text-white hover:text-primary dark:hover:text-primary">About Us</a>
      <a href="#services" class="block px-3 py-2 text-base font-medium text-dark dark:text-white hover:text-primary dark:hover:text-primary">Services</a>
      <a href="#features" class="block px-3 py-2 text-base font-medium text-dark dark:text-white hover:text-primary dark:hover:text-primary">Features</a>
      <a href="#testimonials" class="block px-3 py-2 text-base font-medium text-dark dark:text-white hover:text-primary dark:hover:text-primary">Testimonials</a>
      <a href="#contact" class="block px-3 py-2 text-base font-medium text-dark dark:text-white hover:text-primary dark:hover:text-primary">Contact</a>
    </div>
  </div>
</header>

<script>
  // Mobile menu toggle
  const mobileMenuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');

  mobileMenuButton?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
  });

  // Theme toggle
  const themeToggle = document.getElementById('theme-toggle');

  themeToggle?.addEventListener('click', () => {
    if (document.documentElement.classList.contains('dark')) {
      document.documentElement.classList.remove('dark');
      localStorage.theme = 'light';
    } else {
      document.documentElement.classList.add('dark');
      localStorage.theme = 'dark';
    }
  });
</script>